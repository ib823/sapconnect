# SEN Environment Configuration Template
# Copy to .env and fill in your values
# NEVER commit .env to version control

# ============================================================
# SAP SYSTEM CONNECTION
# IMPORTANT: You must hold valid SAP Named User licenses for
# all systems configured below.
# ============================================================

# Source SAP System (ECC or S/4HANA)
SAP_SOURCE_HOST=
SAP_SOURCE_PORT=443
SAP_SOURCE_CLIENT=100
SAP_SOURCE_USER=
SAP_SOURCE_PASSWORD=
# Protocol: odata | rfc | adt
SAP_SOURCE_PROTOCOL=odata

# Target S/4HANA System
SAP_TARGET_HOST=
SAP_TARGET_PORT=443
SAP_TARGET_CLIENT=100
SAP_TARGET_USER=
SAP_TARGET_PASSWORD=
SAP_TARGET_PROTOCOL=odata

# ============================================================
# OPERATION MODE
# ============================================================
# mock = Use built-in test data (no SAP connection needed)
# live = Connect to actual SAP systems (requires credentials above)
SEN_MODE=mock

# Safety: dry-run by default for all write operations
SEN_DRY_RUN=true

